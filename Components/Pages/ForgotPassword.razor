@page "/ForgotPassword"
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject AuthService AuthService

<link rel="stylesheet" href="css/forgot-password.css">

<PageTitle>Forgot Password</PageTitle>

<div class="forgot-wrapper">
    <div class="forgot-card">
        <h3 class="forgot-title">Reset your password</h3>

        <form class="forgot-form" name="EmailForm">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <InputText type="email" class="form-control" @bind-Value="email" required />
            </div>

            <div class="mb-3">
                <label class="form-label">New Password (5-128 characters)</label>
                <InputText type="password" class="form-control" @bind-Value="password" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Confirm Password</label>
                <InputText type="password" class="form-control" @bind-Value="confirmPassword" required />
            </div>

            <div class="form-actions">
                <button class="btn btn-primary primary-action" type="button" @onclick="ResetPassword">Submit</button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger mt-2 forgot-error">@ErrorMessage</div>
        }
    </div>
</div>

@code {
    private string email = "";
    private string ErrorMessage = "";
    private string password = "";
    private string confirmPassword = "";

    private async Task ResetPassword()
    {
        if (password != confirmPassword)
        {
            ErrorMessage = "Passwords do not match.";
            return;
        }
        if (password.Length < 5 || password.Length > 128)
        {
            ErrorMessage = "Password must be between 5 and 128 characters.";
            return;
        }

        var success = await AuthService.IsUser(email, password);
        if (success)
        {
            Navigation.NavigateTo("/LoginUser", forceLoad: true);
        }
        else
        {
            ErrorMessage = "Email not found.";
        }
    }
}