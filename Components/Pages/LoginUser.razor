@page "/LoginUser"
@using _213FinalProject.Models
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject AuthService AuthService

<link rel="stylesheet" href="css/login.css">

<PageTitle>Login</PageTitle>

<div class="login-wrapper">
    <div class="login-card">
        <h3 class="login-title">Sign in to your account</h3>

        <form class="login-form">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <InputText class="form-control" @bind-Value="email" />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <InputText type="password" class="form-control" @bind-Value="password" />
            </div>

            <div class="form-actions">
                <!-- Non-submit button wired to Blazor handler -->
                <button class="btn btn-primary primary-action" type="button" @onclick="HandleLogin">Login</button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger mt-2 login-error">@ErrorMessage</div>
        }

        <div class="mt-3 helper-links">
            <button class="btn btn-primary primary-action" @onclick="NavigateRegister">Register</button>
            <button class="btn btn-primary primary-action" @onclick="NavigateForgotPassword">Forgot Password?</button>
        </div>
    </div>
</div>

@code {
    private string email = "";
    private string password = "";
    private string ErrorMessage { get; set; } = string.Empty;

    private async Task HandleLogin()
    {
        ErrorMessage = string.Empty;
        Console.WriteLine($"[Login Attempt] Email: '{email}', Password: '{password}'");

        var success = await AuthService.LoginAsync(email, password);

        if (success)
        {
            Console.WriteLine("[LoginUser] Login successful!");
            Navigation.NavigateTo("/", forceLoad: true);
        }
        else
        {
            ErrorMessage = "Invalid email or password.";
            Console.WriteLine("[LoginUser] Login failed.");
        }
    }

    private void NavigateRegister()
    {
        Navigation.NavigateTo("/RegisterUser", forceLoad: true);
    }

    private void NavigateForgotPassword()
    {
        Navigation.NavigateTo("/ForgotPassword", forceLoad: true);
    }
}