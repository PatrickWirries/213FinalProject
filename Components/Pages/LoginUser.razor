@page "/LoginUser"
@using _213FinalProject.Models
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject AuthService AuthService

<PageTitle>Login</PageTitle>

<h3>Login</h3>

<form>
    <div class="mb-3">
        <label>Email</label>
        <InputText class="form-control" @bind-Value="email" />
    </div>

    <div class="mb-3">
        <label>Password</label>
        <InputText type="password" class="form-control" @bind-Value="password" />
    </div>

    <!-- Use a non-submit button and Blazor @onclick to invoke the handler -->
    <button class="btn btn-primary" type="button" @onclick="HandleLogin">Login</button>
</form>

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger mt-2">@ErrorMessage</div>
}

<div class="mt-3">
    <button class="btn btn-link" @onclick="NavigateRegister">Register</button>
    <button class="btn btn-link" @onclick="NavigateForgotPassword">Forgot Password?</button>
</div>

@code {
    private string email = "";
    private string password = "";
    private string ErrorMessage { get; set; } = string.Empty;

    private async Task HandleLogin()
    {
        ErrorMessage = string.Empty;
        Console.WriteLine($"[Login Attempt] Email: '{email}', Password: '{password}'");

        var success = await AuthService.LoginAsync(email, password);

        if (success)
        {
            Console.WriteLine("[LoginUser] Login successful!");
            Navigation.NavigateTo("/", forceLoad: true);
        }
        else
        {
            ErrorMessage = "Invalid email or password.";
            Console.WriteLine("[LoginUser] Login failed.");
        }
    }

    private void NavigateRegister()
    {
        Navigation.NavigateTo("/register");
    }

    private void NavigateForgotPassword()
    {
        Navigation.NavigateTo("/forgot-password");
    }
}