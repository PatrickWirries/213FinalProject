@page "/manager-panel/delete-user"
@using _213FinalProject.Data
@using _213FinalProject.Models
@using Microsoft.EntityFrameworkCore

@inject _213FinalProjectContext context
@inject NavigationManager NavigationManager

<PageTitle>Delete User Account</PageTitle>

<div class="container mt-4">

    <!-- Header -->
    <div class="header-section mb-4">
        <h1 class="mb-3">Delete User Account</h1>
        <NavLink class="btn btn-outline-primary" href="/manager-panel">
            Back to Manager Panel
        </NavLink>
    </div>

    <!-- Alert Messages -->
    @if (!string.IsNullOrEmpty(Message))
    {
        <div class="alert @(IsError ? "alert-danger" : "alert-success") alert-dismissible fade show"
             role="alert">
            @Message
        </div>
    }

    
    </div>

    <!-- User Table -->
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Current User Accounts</h3>
        </div>

        <div class="card-body">
            @if (Users == null)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3"><em>Loading users...</em></p>
                </div>
            }
            else if (!Users.Any())
            {
                <div class="text-center py-5">
                    <p class="text-muted"><em>No users found.</em></p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in FilteredUsers)
                            {
                                <tr>
                                    <td><strong>@user.UserID</strong></td>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td class="text-center">
                                        <button class="btn btn-sm btn-danger"
                                                @onclick="() => ShowDeleteConfirmation(user)">
                                            Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>


<!-- Delete Confirmation Modal -->
@if (ShowConfirmation && UserToDelete != null)
{
    <div class="modal-overlay" @onclick="CancelDelete">
        <div class="modal-content" @onclick:stopPropagation="true">

            <div class="modal-header">
                <h3 class="modal-title">Confirm Account Deletion</h3>
            </div>

            <div class="modal-body">
                <p class="lead">
                    Are you sure you want to delete this user account?
                </p>

                <div class="user-details">
                    <div class="detail-row">
                        <strong>Name:</strong>
                        <span>@UserToDelete.FullName</span>
                    </div>
                    <div class="detail-row">
                        <strong>Email:</strong>
                        <span>@UserToDelete.Email</span>
                    </div>
                    <div class="detail-row">
                        <strong>User ID:</strong>
                        <span>@UserToDelete.UserID</span>
                    </div>
                </div>

                <div class="alert alert-danger mb-0">
                    <strong>Warning:</strong>
                    This action cannot be undone. All user data including appointments
                    and history will be permanently deleted.
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CancelDelete">
                    Cancel
                </button>
                <button class="btn btn-danger" @onclick="ConfirmDelete">
                    Yes, Delete Account
                </button>
            </div>

        </div>
    </div>
}

@code {
    private List<User>? Users { get; set; }
    private User? UserToDelete { get; set; }

    private bool ShowConfirmation { get; set; }
    private bool IsError { get; set; }

    private string SearchTerm { get; set; } = string.Empty;
    private string Message { get; set; } = string.Empty;

    private IEnumerable<User> FilteredUsers
    {
        get
        {
            if (Users == null)
                return Enumerable.Empty<User>();

            if (string.IsNullOrWhiteSpace(SearchTerm))
                return Users;

            return Users.Where(u =>
                u.FullName.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                u.Email.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase));
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        Users = await context.User
            .Where(u => !(u is Employee))
            .OrderBy(u => u.LastName)
            .ThenBy(u => u.FirstName)
            .ToListAsync();
    }

    private void ShowDeleteConfirmation(User user)
    {
        UserToDelete = user;
        ShowConfirmation = true;
    }

    private void CancelDelete()
    {
        UserToDelete = null;
        ShowConfirmation = false;
    }

    private async Task ConfirmDelete()
    {
        if (UserToDelete == null)
            return;

        try
        {
            bool hasAppointments = await context.Appointment.AnyAsync(a =>
                a.CustomerID == UserToDelete.UserID &&
                a.ScheduledDate >= DateOnly.FromDateTime(DateTime.Now));

            if (hasAppointments)
            {
                Message = "This user has upcoming appointments. Cancel them before deleting.";
                IsError = true;
                ShowConfirmation = false;
                return;
            }

            if (UserToDelete is Manager || UserToDelete is Employee)
            {
                Message = "Staff accounts cannot be deleted from this page.";
                IsError = true;
                ShowConfirmation = false;
                return;
            }

            context.User.Remove(UserToDelete);
            await context.SaveChangesAsync();

            Message = $"User account for {UserToDelete.FullName} has been deleted.";
            IsError = false;

            await LoadUsers();
            UserToDelete = null;
            ShowConfirmation = false;
        }
        catch (Exception ex)
        {
            Message = $"Error deleting user account: {ex.Message}";
            IsError = true;
            ShowConfirmation = false;
        }
    }
}
