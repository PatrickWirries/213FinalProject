@rendermode InteractiveServer
@using Data
@using _213FinalProject.Models
@inject _213FinalProjectContext context
@inject NavigationManager Navigation
@inject AuthService AuthService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">213FinalProject</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="schedule-appointment">
                <span class="bi bi-calendar-plus" aria-hidden="true"></span> Schedule Appointment
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="UserAppointments">
                <span class="bi bi-calendar-check" aria-hidden="true"></span> Appointments
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="services">
                <span class="bi bi-scissors" aria-hidden="true"></span> Services
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="employees">
                <span class="bi bi-person-arms-up" aria-hidden="true"></span> Employees
            </NavLink>
        </div>

        @if(_isManager)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="manager-panel">
                    <span class="bi bi-tools" aria-hidden="true"></span> Manager Panel
                </NavLink>
            </div>
        }


    </nav>
</div>

@code{
    private bool _authChecked;
    private bool _isManager;

    protected override void OnInitialized()
    {
        // Subscribe to auth state changes
        AuthService.OnChange += StateHasChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        return;

        // JS is now available — safe to read session storage
        await AuthService.InitializeAsync();

        _isManager = await AuthService.IsManager();
        _authChecked = true;

        StateHasChanged();
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/LoginUser", forceLoad: true);
        StateHasChanged();
    }

    public void Dispose()
    {
        AuthService.OnChange -= StateHasChanged;
    }

}